<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="Endpoint" table="endpoints">
      <meta attribute="class-description">
         Class that contains information about endpoints.
      </meta>
      <id name="endpointID" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="situationName" column="situation_name" type="string"/>
      <property name="objectName" column="object_name" type="string"/>
      <property name="operationName" column="operation_name" type="string"/>
      <property name="qualifier" column="qualifier" type="string"/>
      <property name="endpointURL" column="endpoint_URL" type="string"/>
   </class>
</hibernate-mapping>